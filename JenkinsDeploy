 pipeline{
    agent {
        docker{ image 'rasilva1986/java-maven:alm' }
    }

    stages{
        stage('Deploy'){
            steps{
                echo 'Deploying..'
                sh 'mvn spring-boot:run'
            }

            post {
                always{
                    echo 'saving artifacts...'
                    archiveArtifacts artifacts: 'target/*.jar', onlyIfSuccessful: true
                }
            }
        }
    }
}